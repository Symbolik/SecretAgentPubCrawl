<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/background_dark"
    android:tileMode="repeat"
    >

    <!--android:background="@android:color/black"-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AGENT#"
        android:id="@+id/textView"
        android:layout_weight="0.04"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE YOUR TACTIC!"
        android:id="@+id/textView2"
        android:layout_weight="0.04"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gunButton"
        android:src="@drawable/gun_btn_state"
        android:background="@android:color/transparent"
        android:layout_above="@+id/intelButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intelButton"
        android:src="@drawable/intel_btn_state"
        android:background="@android:color/transparent"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poisonButton"
        android:src="@drawable/poison_btn_state"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/intelButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#FF0000"
        android:id="@+id/gametimerView"
        android:layout_above="@+id/intelButton"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"/>


</RelativeLayout>