<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/background_dark"
    android:tileMode="repeat"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Secret Agent# "
        android:id="@+id/agentNumText"
        android:layout_weight="0.04"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="64dp"
        android:layout_height="100dp"
        android:id="@+id/usercode_spinner2"
        android:spinnerMode="dropdown"
        android:background="#333333"
        android:layout_marginTop="120dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/anchor"/>

    <Spinner
        android:layout_width="64dp"
        android:layout_height="100dp"
        android:id="@+id/usercode_spinner1"
        android:spinnerMode="dropdown"
        android:background="#333333"
        android:layout_marginTop="120dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/usercode_spinner2"/>

    <Spinner
        android:layout_width="64dp"
        android:layout_height="100dp"
        android:id="@+id/usercode_spinner3"
        android:spinnerMode="dropdown"
        android:background="#333333"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/usercode_spinner2"/>

    <Spinner
        android:layout_width="64dp"
        android:layout_height="100dp"
        android:id="@+id/usercode_spinner4"
        android:spinnerMode="dropdown"
        android:background="#333333"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/usercode_spinner3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the other agent&apos;s user code"
        android:id="@+id/textView3"
        android:layout_below="@+id/anchor"
        android:layout_alignLeft="@+id/usercode_spinner1"
        android:layout_alignStart="@+id/usercode_spinner1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND THE CHALLENGE"
        android:id="@+id/challenge_button"
        android:layout_below="@+id/usercode_spinner2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />


</RelativeLayout>